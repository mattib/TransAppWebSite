@using TransAppWebSite.Utilities
@model TransAppWebSite.Models.Customer
@{
    ViewBag.Title = "Create Customer";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
            </hgroup>
            
        </div>
    </section>
}
<article>

@using (Html.BeginForm("Edit", "Customers", FormMethod.Post))
{
     @Html.Label("Name: ") 
    @Html.TextBoxFor(m => m.Name)

    <h3>@Html.Label("Adress: ")</h3>
    <br/>
    @Html.Label("Street Name: ") 
    @Html.TextBoxFor(m => m.Address.StreetName)
    <br/>
    @Html.Label("Street Number: ")
    @Html.TextBoxFor(m => m.Address.StreetNumber, new { @Value = (Model.Address.StreetNumber != null ?Model.Address.StreetNumber.ToString() :string.Empty) })
    <br/>
    @Html.Label("City: ")
    @Html.TextBoxFor(m => m.Address.City)
    <br/>
    @Html.Label("District: ")
    @Html.TextBoxFor(m => m.Address.District)
    <br/>
    @Html.Label("Country: ")
    @Html.TextBoxFor(m => m.Address.Country)
    <br/>
    @Html.Label("Postal Code: ")
    @Html.TextBoxFor(m => m.Address.PostalCode)
    <br/>
    
    <h3>@Html.Label("Conatct: ")</h3>
    <br/>
    @Html.Label("First Name: ") 
    @Html.TextBoxFor(m => m.Contact.FirstName)
    <br/>
    @Html.Label("Last Name: ") 
    @Html.TextBoxFor(m => m.Contact.LastName)
    <br/>
    @Html.Label("Office Number: ") 
    @Html.TextBoxFor(m => m.Contact.OfficeNumber)
    <br/>
    @Html.Label("Cell Number: ") 
    @Html.TextBoxFor(m => m.Contact.CellNumber)
    <br/>
    @Html.Label("Email: ") 
    @Html.TextBoxFor(m => m.Contact.Email)
    <br/>
    
    @Html.HiddenFor(m => m.LastModified)  
    @Html.HiddenFor(m => m.RowStatus)
    @Html.HiddenFor(m => m.Id)

    <br />
    <input type="Submit"  id='CreateCustomer' value='Create' />
}
<br />
<br />
@Html.ActionLink("Customers", "Index")
<br />
@Html.ActionLink("Home", "Index", "Home")
</article>