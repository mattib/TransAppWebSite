@using TransAppWebSite.Utilities
@model TransAppWebSite.Models.TaskViewModel
@{
    ViewBag.Title = "Edit Task";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
            </hgroup>
            
        </div>
    </section>
}

<article>

@using (Html.BeginForm("Edit", "Tasks", FormMethod.Post))
{
    @Html.Label("Delivery Number: ") 
    @Html.TextBoxFor(m => m.DeliveryNumber)
    <br/>
    @Html.Label("User Name: ")

    @Html.DropDownListFor(m => m.User.Id, new SelectList(Model.UsersList.CompaniesUsersList, "Id", "FullName", Model.UsersList.CompaniesUsersList.First().Id))

    <br/>
    
    @Html.Label("Sender Address: ")

    @Html.DropDownListFor(m => m.SenderAddress.Id, new SelectList(Model.AddressesList.CompaniesAddressesList, "Id", "AddressString", Model.AddressesList.CompaniesAddressesList.First().Id))

    <br/>
    
    @Html.Label("Reciver Address: ")

    @Html.DropDownListFor(m => m.ReciverAddress.Id, new SelectList(Model.AddressesList.CompaniesAddressesList, "Id", "AddressString", Model.AddressesList.CompaniesAddressesList.First().Id))

    <br/>@*
    
    @Html.Label("Pick Up Time: ")

    if(!Model.PickUpTime.HasValue)
    {
        Model.PickUpTime = new DateTime();
        Model.PickUpTime = DateTime.Now;
    }
   
    @Html.TextBoxFor(m => m.PickUpTime.Value)

    <br/>
    
     @Html.Label("Delivery Time: ")

    if(!Model.DeliveryTime.HasValue)
    {
        Model.DeliveryTime = new DateTime();
        Model.DeliveryTime = DateTime.Now.AddDays(1);
    }
   
   @Html.EditorFor(model => model.DeliveryTime.Value)//, new { @class = "jquery_datepicker", @Value = Model.DeliveryTime.Value.ToString("dd-MM-yyyy HH:mm") })

    <br/>*@
    
    @Html.Label("Comment: ")
    
    @Html.TextBoxFor(m => m.Comment)
      
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.Company)
    @Html.HiddenFor(m => m.Contact)

    <br />
    <input type="Submit"  id='EditTask' value='Update' />
}
<br />
<br />
@Html.ActionLink("Tasks", "Index")
<br />
@Html.ActionLink("Home", "Index", "Home")
</article>